      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="/assets/img/zero.png" class="card-img" alt="zero">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title">{{ person.state }} - Risk Level</h4>
            <p class="card-text">There are <span id="cases"></span> active cases in your state.</p>
            <h6 class="card-text">Your are in an area with Low Risk</h6>
          </div>
        </div>
      </div>
    </div>

    {{!-- medium --}}
    <div class="card mb-3" style="max-width: 540px;" id="one">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="/assets/img/one.png" class="card-img" alt="one">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title">{{ person.state }} - Risk Level</h4>
            <p class="card-text">There are <span id="cases"></span> active cases in your state.</p>
            <h6 class="card-text">Your are in an area with Medium Risk</h6>
          </div>
        </div>
      </div>
    </div>

    {{!-- high --}}
    <div class="card mb-3" style="max-width: 540px;" id="twothree">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="/assets/img/twothree.png" class="card-img" alt="twothree">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title">{{ person.state }} - Risk Level</h4>
            <p class="card-text">There are <span id="cases"></span> active cases in your state.</p>
            <h6 class="card-text">Your are in an area with High Risk</h6>
          </div>
        </div>
      </div>
    </div>

    {{!-- very high risk --}}
    <div class="card mb-3" style="max-width: 540px;" id="four">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="/assets/img/four.png" class="card-img" alt="four">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title">{{ person.state }} - Risk Level</h4>
            <p class="card-text">There are <span id="cases"></span> active cases in your state.</p>
            <h6 class="card-text">Your are in an area with a Very High Risk</h6>
          </div>
        </div>
      </div>
    </div>

    {{!-- severe --}}
    <div class="card mb-3" style="max-width: 540px;" id="five">
      <div class="row no-gutters">
        <div class="col-md-4">
          <img src="/assets/img/five.png" class="card-img" alt="five">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h4 class="card-title">{{ person.state }} - Risk Level</h4>
            <p class="card-text">There are <span id="cases"></span> active cases in your state.</p>
            <h6 class="card-text">Your are in an area with Severe Risk</h6>
          </div>
        </div>
      </div>
    </div>

    <h6>Are you Eligible?</h6>
  </div>

</div>
<script>

  $(document).ready(() => {
    const key = "{{key}}";
    const userState = "{{ person.state }}";
    console.log(userState);
    // node fetch

    const stateData =
      `https://api.covidactnow.org/v2/state/${userState}.json?apiKey=` + key;


    $.ajax({
      url: stateData,
      method: "GET",
    }).then((response) => {
      console.log(response.url);
      $("#userState").append(response.state);


      if (response.riskLevels.overall === "0") {
        $("#one").hide();
        $("#twothree").hide();
        $("#four").hide();
        $("#five").hide();
      }
      if (response.riskLevels.overall === "1") {
        $("#zero").hide();
        $("#twothree").hide();
        $("#four").hide();
        $("#five").hide();
      }
      if (response.riskLevels.overall === "2" || "3") {
        $("#zero").hide();
        $("#one").hide();
        $("#four").hide();
        $("#five").hide();
      }
      if (response.riskLevels.overall === "4") {
        $("#zero").hide();
        $("#one").hide();
        $("#twothree").hide();
        $("#five").hide();
      }
      if (response.riskLevels.overall === "5") {
        $("#zero").hide();
        $("#one").hide();
        $("#twothree").hide();
        $("#five").hide();
      }
      
      $("#cases").append(response.actuals.cases);

    });

  });
</script>

